<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favoriteCharacterExpandedLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_10dp"
    android:backgroundTint="@color/background_category"
    android:layout_marginBottom="8dp"
    android:paddingHorizontal="30dp"
    android:elevation="20dp"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/title_text_color"
            android:textSize="32sp"
            tools:text="Mako" />

        <ImageView
            android:id="@+id/characterImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/mako_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_category"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/allies"
            android:textAlignment="center"
            android:textColor="@color/title_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/alliesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_text"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center"
            android:maxLines="2"
            android:text="@string/allies"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:text="Bolin, Korra, Asami" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_category"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/enemies"
            android:textAlignment="center"
            android:textColor="@color/title_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/enemiesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_text"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center"
            android:maxLines="2"
            android:text="@string/allies"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:text="Hiroshi Sato, Amon, Tarrlok, Kuvira" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_category"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/affiliation"
            android:textAlignment="center"
            android:textColor="@color/title_text_color"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/affiliationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_text"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center"
            android:maxLines="3"
            android:text="@string/allies"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:text="Fire Ferrets (formerly) Republic City Police Republic City power plant (formerly)" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="-22dp"
        android:layout_marginEnd="-22dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collapseImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/expand_less" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/favoriteImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/favorite" />

    </LinearLayout>


</LinearLayout>